// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Atividade {
  id                 String               @id @default(uuid())
  nome               String
  data_criacao       DateTime
  diaAtividade       DiaAtividade[]
  diaSemanaAtividade DiaSemanaAtividade[]

  @@map("atividades")
}

model Dia {
  id           String         @id @default(uuid())
  data         DateTime
  diaAtividade DiaAtividade[]

  @@unique([data])
  @@map("dias")
}

model DiaAtividade {
  id           String @id @default(uuid())
  id_dia       String
  id_atividade String

  dia       Dia       @relation(fields: [id_dia], references: [id])
  atividade Atividade @relation(fields: [id_atividade], references: [id])

  @@unique([id_dia, id_atividade])
  @@map("dia_atividades")
}

model DiaSemanaAtividade {
  id           String @id @default(uuid())
  id_atividade String
  dia_semana   Int

  atividade Atividade @relation(fields: [id_atividade], references: [id])

  @@unique([id_atividade, dia_semana])
  @@map("dia_semana_atividade")
}
